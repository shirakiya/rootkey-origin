[% WRAPPER 'include/layout.tt' %]

<div style="text-align:right;">
    ようこそ、[% account_id %]さん
</div>
<div>
    <p><h2>検索履歴一覧</h2></p>
    <hr/>
    <div>
        [% FOR search_data IN search_history %]
        [% search_data.search_created_at %]　||　<b>[% search_data.search_name %]</b><br>
        <table>
            <tr>
                <td align="right">出発地：</td>
                <td>[% search_data.search_department_word %]</td>
                <td align="right">目的地：</td>
                <td>[% search_data.search_destination_word %]</td>
            </tr>
            <!--
            <tr>
                <td align="right">経由地：</td>
                <td>[%  %]</td>
                <td></td>
            </tr>
            --!>
            <tr>
                <td align="right">検索ワード：</td>
                <td>[% search_data.search_keyword %]</td>
            </tr>
            <tr>
                <td align="right">移動手段：</td>
                <td><!--もしdrivingなら車などのように変換する--!></td>
                <td align="right">検索半径：</td>
                <td>[% search_data.search_radius %]m</td>
            </tr>
        </table>
        <form method="get" action=[% uri_for('/get') %]>
            <input type="hidden" id="came_from_history" name="came_from_history" value=[% search_data.search_id %]>　　　　　　　　　　　　　　　　　⇒
            <input type="submit" value="検索履歴を地図でみる">
        </form>
        <br><hr>
        [% END %]
    </div>
</div>

[% END %]
