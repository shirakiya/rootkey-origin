    <script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyC6MyJJ0JoQDbBqTunjCiTrXeClAn7uqJM&sensor=false"></script>

    <script>
        //地図の初期状態の設定
        function initialize(){
            var myhome = new google.maps.LatLng(34.836068,135.530077);
            var mapOptions = {
                center: myhome,
                zoom: 12,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };
            var map = new google.maps.Map(document.getElementById("map_canvas"),mapOptions);

            //マーカーの設置
            var marker = new google.maps.Marker({
                position: myhome,
                map: map,
                title:"Hello World!!"
            });
            //情報ウィンドウ（吹き出し）の設置
            var contentString =
                '<div id="content">'+
                    '<div id="siteNotice">'+
                    '</div>'+
                    '<h2 id="firstHeading" class="firstHeading">ここはどこ？</h2>'+
                    '<div id="bodyContent">'+
                        '<p>ここはどこなのでしょうか？</p>'+
                        '<p>URL: <a href="http://www.gaiax.co.jp/jp/">http://www.gaiax.co.jp/jp/</a></p>'+
                    '</div>'+
                '</div>';
            var infowindow = new google.maps.InfoWindow({
                content: contentString,
                maxWidth: 500
            });
            google.maps.event.addListener(marker,'click',function(){
                    infowindow.open(map,marker);
                    });

            //円の描写
            var circleOptions = {
                strokeColor: "#FF0000",
                strokeOpacity: 0.8,
                strokeWeight: 2,
                fillColor: "#FF0000",
                fillOpacity: 0.35,
                map: map,
                center: myhome,
                radius: 500,
            };
            new google.maps.Circle(circleOptions);
        }

        //読み込んだ後に地図を描写する
        google.maps.event.addDomListener(window,'load',initialize);


</script>

